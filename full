     script redirecion por dispositivos 3 no redirige por limites en pc
y tiene una tercera redirecion si el usiario entra 3 veces

<script>
  // URLs personalizadas
  const urlMovil = "https://www.techblog.website/crm-vs-erp/";
  const urlLimite = "https://www.techblog.website/erp-and-crm/";                                                    
  const urlPC = "https://www.youtube.com/";

  // Configuración de límite
  const maxEntradas = 5;
  const periodo = 24 * 60 * 60 * 1000; // 24 horas en milisegundos
  const storageKey = 'contadorAccesos';
  const ahora = Date.now();

  // Detectar dispositivo móvil
  function esDispositivoMovil() {
    return /Mobi|Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
  }

  if (esDispositivoMovil()) {
    // Control de acceso para móviles
    let datos = JSON.parse(localStorage.getItem(storageKey));

    if (!datos) {
      // Primer acceso
      datos = {
        contador: 1,
        primerAcceso: ahora
      };
      localStorage.setItem(storageKey, JSON.stringify(datos));
    } else {
      if (ahora - datos.primerAcceso > periodo) {
        // Reiniciar si pasó el periodo
        datos = {
          contador: 1,
          primerAcceso: ahora
        };
      } else {
        datos.contador++;
      }
      localStorage.setItem(storageKey, JSON.stringify(datos));
    }

    // Redirección según número de accesos
    if (datos.contador > maxEntradas) {
      window.location.href = urlLimite;
    } else {
      window.location.href = urlMovil;
    }

  } else {
    // Redirección directa para usuarios de PC
    window.location.href = urlPC;
      }
</script>
    
    
